@page
@model ShoppingWebsite.Pages.Components.Category.CreateModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/CreateForm.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
</head>
<body>
    <a asp-page="Index" class="backHome">Back</a>
    <div class="login-box">
        <h2>Create a category</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="user-box">
                <input type="text" asp-for="categoryVM.CategoryName">
                <label>Category Name</label>
                <span asp-validation-for="categoryVM.CategoryName" class="text-danger"></span>
            </div>
            <div class="user-box">
                <input type="text" asp-for="categoryVM.Description">
                <label>Description</label>
                <span asp-validation-for="categoryVM.Description" class="text-danger"></span>
            </div>
            
            <div class="row justify-content-center">
                <button type="submit">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    Save
                </button>
            </div>
        </form>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
