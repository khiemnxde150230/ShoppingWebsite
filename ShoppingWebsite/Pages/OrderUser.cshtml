@page
@model ShoppingWebsite.Pages.OrderUserModel
@{
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/cartStyle.css" asp-append-version="true" />
</head>
<body>
    <section>
        <div class="product-card" style="transform: scaleX(1.4);">
            <div class="product-header pb-2">
                <h1 class="font-weight-light ml-4 text-center">Add product to cart</h1>
            </div>
            <div class="product-body">
                <form method="post" asp-page="OrderUser" class="form-order">
                    <div class="product-image">
                        <img src="@Model.product.ProductImage" class="rounded">
                    </div>
                    <div class="product-details">
                        <h2 class="product-name">@Model.product.ProductName</h2>
                        <p style="box-sizing: border-box;" id="decscriptionp">It is consumed by living beings to provide them with energy, nutrients, and sustenance.</p>
                        <div class="inputBox">
                            <input name="orderQuantity" type="number" min="0" max="@Model.product.QuantityPerUnit" required />
                            <span class="product_quantity">Order quantity</span>
                        </div>
                        <h2 class="product_price">Price: $@Model.product.UnitPrice</h2>
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <div class="product_btn">
                            <button type="submit" class="btn add-to-cart btn btn-default">Order</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>
