@page
@model ShoppingWebsite.Pages.RegisterModel
@{
    ViewData["Title"] = "Register Page";
}
<head>
    <link rel="stylesheet" href="~/css/logincss.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body class="img">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Sign Up</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Create your account</h3>
                        <form class="signin-form" asp-page="register" method="post">
                            @if (!string.IsNullOrEmpty(@Model.errorMess))
                            {
                                <div class="form-outline mb-4 text-center">
                                    <span class="alert alert-danger" role="alert">
                                        @Model.errorMess
                                    </span>
                                </div>
                            }
                            <div class="form-group">
                                <input type="text" class="form-control" name="fullname" placeholder="Full Name" required>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" name="username" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="address" placeholder="Address" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="phone" placeholder="Phone" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" name="password" class="form-control" placeholder="Password" required>
                                <span class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign Up</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/js/LoginJs.js" asp-append-version="true"></script>
</body>