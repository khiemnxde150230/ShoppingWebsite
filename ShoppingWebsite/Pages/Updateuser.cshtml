@page
@model ShoppingWebsite.Pages.UpdateuserModel
@{
}
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/CreateForm.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
</head>
<body style="overflow: auto;">
    <div class="login-box" style="top: 60%; padding-bottom: 20px;">
        <h2>Update profile</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="user-box">
                <input type="text" asp-for="customers.ContactName" required>
                <label>ContactName</label>
            </div>
            <div class="user-box">
                <input type="text" asp-for="customers.Password" required>
                <label>Password</label>
            </div>
            <div class="user-box">
                <input type="text" asp-for="customers.Address" required>
                <label>Address</label>
            </div>
            <div class="user-box">
                <input type="text" asp-for="customers.Phone" required>
                <label>Phone</label>
            </div>

            <div class="row justify-content-center">
                <button type="submit">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    Save
                </button>
            </div>
        </form>
    </div>
</body>