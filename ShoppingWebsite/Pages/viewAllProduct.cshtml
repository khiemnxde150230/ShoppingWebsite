@page
@model ShoppingWebsite.Pages.viewAllProductModel
@{
    ViewData["Title"] = "View All Products";
}
<div class="container">
    <div class="row title-product">
        <h2>View All Products</h2>
    </div>

    <div class="row mt-4">
        @foreach (var product in Model.listPizza)
        {
            <div class="col-lg-3 col-md-4 mb-5">
                <div class="product-box">
                    <div class="product-inner-box position-relative">
                        <div class="icons">
                            <a href="#" class="text-decoration-none text-dark"><i class="bi bi-suit-heart-fill"></i></a>
                            <a href="#" class="text-decoration-none text-dark"><i class="bi bi-eye-fill"></i></a>
                        </div>

                        <img src="@product.ProductImage" class="img-fluid" />

                        <div class="cart-btn">
                            <a class="btn btn-white shadow-sm rounded-pill" asp-page="OrderUser" asp-route-id="@product.ProductID"><i class="bi bi-cart4"></i> Add to Cart</a>
                        </div>
                    </div>

                    <div class="product-info">
                        <div class="product-name">
                            <h3>@product.ProductName</h3>
                        </div>
                        <div class="product-price">
                            $<span>@product.UnitPrice</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
