@page
@model ShoppingWebsite.Pages.LoginModel
@{
    ViewData["Title"] = "Login Page";
}
<head>
    <link rel="stylesheet" href="~/css/logincss.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="img">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Sign In</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Login to buy our perfect taste pizza</h3>
                        <form class="signin-form" asp-page="Login" method="post">
                            @if (!string.IsNullOrEmpty(@Model.errorMessage))
                            {
                                <div class="form-outline mb-4 text-center">
                                    <span class="alert alert-danger" role="alert">
                                        @Model.errorMessage
                                    </span>
                                </div>
                            }
                            <div class="form-group">
                                <input type="email" class="form-control" name="username" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" name="password" class="form-control" placeholder="Password" required>
                                <span class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Remember Me
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                            <div class="form-group">
                                <p class="text-SignUp">Don't have an account? <a asp-page ="register">Create a free account</a></p>
                            </div>
                        </form>
                        <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="#" class="px-1 py-1 mr-md-1 rounded bg-primary"><i class="bi bi-facebook"></i> Facebook</a>
                            <a href="#" class="px-1 py-1 ml-md-1 rounded bg-info"><i class="bi bi-twitter"></i> Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/js/LoginJs.js" asp-append-version="true"></script>
</body>
